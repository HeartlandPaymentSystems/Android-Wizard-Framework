<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hps.wizard.sample"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <!--
        The main activity for this app. 
        -->
        <activity
            android:name="com.hps.wizard.sample.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 
        	These are the entries for the activities used to display the wizard.  
        -->
        <activity
            android:name="com.hps.wizard.WizardActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.hps.wizard.WizardDialog"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:label="@string/app_name" >
        </activity>
        </application>

</manifest>